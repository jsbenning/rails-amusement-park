<h1>Sign In</h1>

<%= form_tag login_path, method: "post" do %>

<div class="field">
<%= label_tag :name %>
<%= text_field_tag :name %>
</div>

<div class="field">
<%= label_tag :password %>
<%= password_field_tag :password %>
</div><br>

<div class="actions">
<%= submit_tag "Sign In" %>
</div>

<% end %>
