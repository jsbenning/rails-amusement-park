    <h1>Name: <%= @attraction.name %></h1>
    <p>Total Number of Users: <%= @attraction.users.count %></p>
    <p>Ticket Requirement: <%= @attraction.tickets %></p>
    <p>Height Requirement: <%= @attraction.min_height %> inches</p>
    <p>Nausea Rating: <%= @attraction.nausea_rating %></p>
    <p>Happiness Rating: <%= @attraction.happiness_rating %></p>

    <% if @user.admin %>
      <%= link_to 'Edit Attraction', [:edit, @attraction] %></p>

    <% else %>

      <form action="/rides/create" method="post">
        <%= tag(:input, :type => "hidden", :name => :user_id, :value => @user.id) %>
        <%= tag(:input, :type => "hidden", :name => :attraction_id, :value => @attraction.id) %>
        
        <input type="submit", value="Go on this ride" >

      </form>

    <% end %>


